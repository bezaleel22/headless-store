{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "$config/*": ["./config/*"],
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "migrations", "src/plugins/**/ui/*", "admin-ui"],
  "ts-node": {
    "files": true
  }
}
